// .devcontainer/devcontainer.json
{
  "name": "Ubuntu Dev Container",
  "image": "ubuntu:latest",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.vscode-node-essentials",
    "ms-python.python"
  ],
  "runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
  "postCreateCommand": "apt-get update && apt-get install -y npm python3-pip",
  "postStartCommand": "npm install -g typescript",
  "forwardPorts": [5000],
  "remoteUser": "vscode"
}
